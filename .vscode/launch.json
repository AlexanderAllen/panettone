  "version": "0.2.0",
  "configurations": [
    {
        "name": "Local: debug",
        "type": "php",
        "request": "launch",
        "port": 9003,
        "hostname": "localhost",
        "xdebugSettings": {
          "show_hidden": 1,
        },
        "stopOnEntry": false
    },
    {
      "name": "Lando: debug",

      "type": "php",
      "request": "launch",
      "port": 9003,
      "hostname": "localhost",
      "pathMappings": {
        "/app/docroot/web/modules/contrib/musica/tools/schema-generator": "${workspaceFolder}"
      },
      "xdebugSettings": {
        "show_hidden": 1,
      },
      "stopOnEntry": false,
    }
  ]
}
